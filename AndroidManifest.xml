<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asteroids"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.asteroids.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.asteroids.About"
            android:label="@string/about"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.asteroids.Configuration"
            android:label="@string/configuration" >
        </activity>
        <activity
            android:name="com.example.asteroids.Scores"
            android:label="@string/scores" >
        </activity>
    </application>

</manifest>